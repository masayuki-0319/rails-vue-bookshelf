<div class="container">
  <h1 class="#f3e5f5 purple lighten-5 center">[Rails+Vue.js]~Bookshelf~</h1>
  <div class="row #e3f2fd blue lighten-5">
    <% @books.each do |book| %>
      <div class="col s4 m6">
        <div class="card">
          <span class="card-title">
            <%= book.title %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>
